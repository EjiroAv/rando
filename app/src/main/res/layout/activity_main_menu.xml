<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/play_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/ic_custom_button_background"
            android:fontFamily="@font/neue_haas_display_thin"
            android:onClick="playButtonClicked"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/play"
            android:textAlignment="viewStart"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/score_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/play_button"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/ic_custom_button_background"
            android:fontFamily="@font/neue_haas_display_thin"
            android:onClick="scoresButtonClicked"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/score"
            android:textAlignment="viewStart"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/exit_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/score_button"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/ic_custom_button_background"
            android:fontFamily="@font/neue_haas_display_thin"
            android:onClick="exitButtonClicked"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/exit"
            android:textAlignment="viewStart"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/light_dark_mode_switch"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:fontFamily="@font/consola"
        android:text="@string/switch_text" />



</RelativeLayout>